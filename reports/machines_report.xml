<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="upocafe_payments_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Detalles del Pago</h2>
                    <table style="width:100%; border-collapse: collapse; border: 1px solid #ddd;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Fecha</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Nombre del modelo</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Fecha de creacion</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Localizacion</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Estado de la maquina</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="doc.date" /></td>
                                <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="doc.name" /></td>
                                <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="doc.create_date" /></td>
                                <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="doc.location" /></td>
                                <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="doc.status_id.name" /></td>
                            </tr>
                        </tbody>
                    </table>

                    <h2>Reparaciones de la Maquina</h2>
                    <table style="width:100%; border-collapse: collapse; border: 1px solid #ddd;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Reparacion</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.reparations_ids" t-as="reparation">
                                <tr>
                                    <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="reparation.repair_summary" /></td>
                                    <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="reparation.fini_datetime" /></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <h2>Reposiciones de la Maquina</h2>
                    <table style="width:100%; border-collapse: collapse; border: 1px solid #ddd;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Producto</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Proveedor</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Cantidad</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Fecha</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.repositions_ids" t-as="reposition">
                                <tr>
                                    <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="reposition.product_id" /></td>
                                    <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="reposition.company_id" /></td>
                                    <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="reposition.product_qty" /></td>
                                    <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="reposition.date_approve" /></td>
                                    <td style="border: 1px solid #ddd; padding: 8px; text-align: left;"><t t-esc="reposition.price_total" /></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>


                    <div style="margin-top: 20px;"></div>
                </div>
            </t>
        </t>
    </template>
</odoo>