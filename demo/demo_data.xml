<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Product: Leche -->
        <record id="product_leche" model="product.product">
            <field name="name">Leche</field>
            <field name="type">product</field>
            <field name="purchase_ok">True</field>
            <field name="sale_ok">False</field>
        </record>

        <!-- Product: Cafe -->
        <record id="product_cafe" model="product.product">
            <field name="name">Cafe</field>
            <field name="type">product</field>
            <field name="purchase_ok">True</field>
            <field name="sale_ok">False</field>
        </record>

        <!-- Product: Cafe con Leche -->
        <record id="product_cafe_con_leche" model="product.product">
            <field name="name">Cafe con Leche</field>
            <field name="type">product</field>
            <field name="purchase_ok">False</field>
            <field name="sale_ok">True</field>
        </record>

        <!-- Product: Cafe Cortado -->
        <record id="product_cafe_cortado" model="product.product">
            <field name="name">Cafe Cortado</field>
            <field name="type">product</field>
            <field name="purchase_ok">False</field>
            <field name="sale_ok">True</field>
        </record>

        <!-- Recipe: Cafe con Leche -->
        <record id="bom_cafe_con_leche" model="mrp.bom">
            <field name="product_tmpl_id" ref="product_cafe_con_leche"/>
            <field name="product_qty">1</field>
        </record>

        <!-- Recipe Line: Cafe para Cafe con Leche -->
        <record id="bom_line_cafe_con_leche_cafe" model="mrp.bom.line">
            <field name="bom_id" ref="bom_cafe_con_leche"/>
            <field name="product_id" ref="product_cafe"/>
            <field name="product_qty">0.5</field>
        </record>

        <!-- Recipe Line: Leche para Cafe con Leche -->
        <record id="bom_line_cafe_con_leche_leche" model="mrp.bom.line">
            <field name="bom_id" ref="bom_cafe_con_leche"/>
            <field name="product_id" ref="product_leche"/>
            <field name="product_qty">0.5</field>
        </record>

        <!-- Recipe: Cafe Cortado -->
        <record id="bom_cafe_cortado" model="mrp.bom">
            <field name="product_tmpl_id" ref="product_cafe_cortado"/>
            <field name="product_qty">1</field>
        </record>

        <!-- Recipe Line: Cafe para Cafe Cortado -->
        <record id="bom_line_cafe_cortado_cafe" model="mrp.bom.line">
            <field name="bom_id" ref="bom_cafe_cortado"/>
            <field name="product_id" ref="product_cafe"/>
            <field name="product_qty">0.7</field>
        </record>

        <!-- Recipe Line: Leche para Cafe Cortado -->
        <record id="bom_line_cafe_con_leche_leche" model="mrp.bom.line">
            <field name="bom_id" ref="bom_cafe_cortado"/>
            <field name="product_id" ref="product_leche"/>
            <field name="product_qty">0.3</field>
        </record>
    </data>
</odoo>

